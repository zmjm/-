@import 'variable'
.al-form__item{
    min-height: 30px;
    .al-form__label{
        float: left;
        width: 100px;
        height: 30px;
        padding: 0 10px;
        font-size: 14px;
        line-height: 30px;
        text-align: right;
    }
    .al-form__input{
        margin-left: 100px;
        min-width: 100px;
    }
    &.al-fl{
        .al-form__input{
            width: 120px;
        }
    }
}

.al-form__wrap{
    position: relative;
    padding: 20px 20px 0 20px;
    border-width: 1px;
    border-style: solid;
    border-color: #e6e6e6;
    .al-form__title{
        position: absolute;
        top: -1em;
        left: 2em;
        padding: 0 1em;
        line-height: 2;
        background-color: #fff;
    }
}

.al-input{
    &.al-input__large{
        .al-input__inner{
            height: 40px;
            line-height: 38px;
        }
    }

    .al-input__inner{
        width: 100%;
        height: 30px;
        padding-left: 1em;
        line-height: 28px;
        border-width: 1px;
        border-style: solid;
        border-color: $e5;
        border-radius: 2px;
        outline: none;
    }
}

a.al-button{
    text-decoration: none;
}

.al-button{
    display: inline-block;
    height: 30px;
    padding: 0 10px;
    color: $gf;
    font-size: 14px;
    line-height: 28px;
    text-align: center;
    vertical-align: bottom;
    white-space: nowrap;
    border-width: 1px;
    border-style: solid;
    border-color: transparent;
    border-radius: 2px;
    outline: none;
    background-color: transparent;
    cursor: pointer;
    &.al-btn__full{
        width: 100%;
        height: 40px;
    }
    &.al-btn__tiny{
        padding: 0 5px;
        height: 22px;
        font-size: 12px;
        line-height: 22px;
    }
    &.al-btn__default{
        background-color: $default-blue;
        &:hover{    
          background-color: $default-blue-hover; 
        }
        &:active{
          background-color: $default-blue-active; 
        }
    }
    &.al-btn__danger{
        background-color: $default-red;
        &:hover{    
          background-color: $default-red-hover; 
        }
        &:active{
          background-color: $default-red-active; 
        }
    }
    &.al-btn__disabled{
        color: $ae;
        background-color: $f1;    
        border-color: $cd;
    }
}